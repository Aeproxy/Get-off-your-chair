{
  "manifest_version": 3,
  "name": "Get off your chair!",
  "version": "1.2",
  "permissions": [
    "alarms",
    "storage",
    "windows",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16":  "icons/iconResume16.png",
      "32":  "icons/iconResume32.png",
      "64":  "icons/iconResume64.png",
      "128": "icons/iconResume128.png"
    }
  },
  "icons": {
    "16":  "icons/iconResume16.png",
    "32":  "icons/iconResume32.png",
    "64":  "icons/iconResume64.png",
    "128": "icons/iconResume128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
